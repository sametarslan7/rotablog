<%- include('partials/header') %>

<!-- OKUMA S√úRESƒ∞ HESAPLAMA -->
<% 
    const cleanContent = blog.content.replace(/<[^>]*>/g, ''); 
    const wordCount = cleanContent.split(/\s+/).length; 
    const readTime = Math.ceil(wordCount / 200); 
%>

<main class="container">
    
    <!-- ORTALANMI≈û TEK S√úTUN YAPISI -->
    <div class="post-wrapper" style="max-width: 850px; margin: 0 auto; padding: 40px 0;">
        
        <article class="full-post" style="background: white; padding: 50px; border-radius: 12px; border: 1px solid #e5e7eb; box-shadow: 0 4px 20px rgba(0,0,0,0.02);">
            
            <!-- BA≈ûLIK ALANI -->
            <div class="post-header" style="text-align: center; margin-bottom: 40px;">
                <span class="post-cat" style="color: #059669; font-weight: 700; text-transform: uppercase; letter-spacing: 1px; font-size: 14px;"><%= blog.category %></span>
                <h1 style="font-size: 42px; margin: 20px 0; color: #1f2937; line-height: 1.2;"><%= blog.title %></h1>
                
                <!-- Tarih ve S√ºre -->
                <div class="post-meta" style="color: #6b7280; font-size: 14px; display: flex; justify-content: center; gap: 15px;">
                    <span>üìÖ <%= new Date(blog.date).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                    <span>‚Ä¢</span>
                    <span>‚è±Ô∏è <%= readTime %> dk okuma</span>
                </div>
                <!-- HAVA DURUMU WIDGET (EMOJƒ∞Lƒ∞ VERSƒ∞YON) -->
<div id="weatherWidget" style="display: none; align-items: center; gap: 12px; background: #e0f2fe; padding: 8px 20px; border-radius: 50px; margin: 15px auto; width: fit-content; border: 1px solid #bae6fd; box-shadow: 0 2px 5px rgba(0,0,0,0.05);">
    <!-- Resim yerine b√ºy√ºk bir Emoji alanƒ± -->
    <span id="w-icon" style="font-size: 28px; line-height: 1;">üå§Ô∏è</span>
    
    <div style="text-align: left;">
        <div style="font-weight: 800; color: #0284c7; font-size: 16px; line-height: 1.1;">
            <span id="w-temp">--</span>¬∞C
        </div>
        <div style="font-size: 11px; color: #576d7e; text-transform: capitalize; margin-top: 2px;" id="w-desc">
            Y√ºkleniyor...
        </div>
    </div>
</div>
                <!-- Sosyal Payla≈üƒ±m (Ortalƒ±) -->
                <div class="share-buttons" style="justify-content: center; margin-top: 20px;">
                    <a href="https://api.whatsapp.com/send?text=<%= blog.title %> - https://rotablog.com/blog/<%= blog.slug %>" target="_blank" class="share-btn whatsapp">WhatsApp</a>
                    <a href="https://twitter.com/intent/tweet?text=<%= blog.title %>&url=https://rotablog.com/blog/<%= blog.slug %>" target="_blank" class="share-btn twitter">X</a>
                    <a href="https://www.facebook.com/sharer/sharer.php?u=https://rotablog.com/blog/<%= blog.slug %>" target="_blank" class="share-btn facebook">Facebook</a>
                </div>
            </div>
            
            <!-- KAPAK G√ñRSELƒ∞ -->
            <img src="<%= blog.image %>" class="main-post-image" alt="<%= blog.title %>" style="width: 100%; border-radius: 12px; margin-bottom: 50px;">
            
            <!-- ƒ∞√áERƒ∞K -->
            <div class="post-content" style="font-size: 18px; line-height: 1.8; color: #374151;">
                <%- blog.content %>
            </div>

            <!-- ETƒ∞KETLER -->
            <div class="post-footer" style="margin-top: 50px; padding-top: 20px; border-top: 1px solid #f3f4f6; text-align: center;">
                <div class="tags-cloud" style="justify-content: center;">
                    <% blog.tags.forEach(tag => { %>
                        <a href="/?search=<%= tag %>" style="background:#f3f4f6; padding:6px 15px; border-radius:20px; font-size:13px; color:#666; margin: 5px;">#<%= tag %></a>
                    <% }) %>
                </div>
            </div>

            <!-- 1. BEƒûENƒ∞ ALANI -->
            <div class="like-section" style="margin-top: 40px; padding: 30px; background: #f9fafb; border-radius: 12px; text-align: center;">
                <h3 style="margin-bottom: 15px;">Bu yazƒ± ho≈üuna gitti mi?</h3>
                <button id="likeBtn" class="like-button" onclick="likePost('<%= blog.slug %>')" style="font-size: 18px; padding: 12px 40px;">
                    ‚ù§Ô∏è <span id="likeText">Beƒüen</span>
                </button>
                <p style="margin-top: 15px; color: #6b7280;">
                    Toplam <strong id="likeCount" style="color: #059669; font-size: 18px;"><%= blog.likes %></strong> gezgin beƒüendi.
                </p>
            </div>

            <!-- 2. BENZER YAZILAR -->
            <% if (typeof relatedPosts !== 'undefined' && relatedPosts.length > 0) { %>
            <div class="related-wrapper" style="margin-top: 60px;">
                <h3 class="related-title" style="text-align: center; margin-bottom: 30px;">Bunlarƒ± da Beƒüenebilirsiniz ‚úàÔ∏è</h3>
                <div class="related-grid">
                    <% relatedPosts.forEach(post => { %>
                        <a href="/blog/<%= post.slug %>" class="related-card">
                            <div class="related-img">
                                <img src="<%= post.image %>" alt="<%= post.title %>">
                            </div>
                            <div class="related-info">
                                <h4><%= post.title %></h4>
                                <span class="read-more">Oku &rarr;</span>
                            </div>
                        </a>
                    <% }) %>
                </div>
            </div>
            <% } %>

            <!-- 3. YORUMLAR -->
            <div class="comments-wrapper" id="comments-section" style="margin-top: 60px;">
                <h3 style="border-bottom: 2px solid #f3f4f6; padding-bottom: 15px; margin-bottom: 30px;">
                    Yorumlar (<%= blog.comments.length %>)
                </h3>

                <!-- Yorum Listesi -->
                <div class="comments-list">
                    <% if (blog.comments.length > 0) { %>
                        <% blog.comments.reverse().forEach(comment => { %>
                            <div class="comment-item" style="display: flex; gap: 20px; margin-bottom: 25px; border-bottom: 1px solid #f3f4f6; padding-bottom: 25px;">
                                <div class="comment-avatar" style="width: 50px; height: 50px; background: #059669; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 20px; flex-shrink: 0;">
                                    <%= comment.name.charAt(0).toUpperCase() %>
                                </div>
                                <div class="comment-body" style="flex: 1;">
                                    <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
                                        <strong style="font-size: 16px; color: #1f2937;"><%= comment.name %></strong>
                                        <span style="font-size: 12px; color: #9ca3af;"><%= new Date(comment.date).toLocaleDateString('tr-TR') %></span>
                                    </div>
                                    <p style="margin: 0; color: #4b5563; line-height: 1.5;"><%= comment.text %></p>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div style="text-align: center; padding: 30px; background: #f9fafb; border-radius: 12px; color: #6b7280;">
                            <p>Hen√ºz yorum yapƒ±lmamƒ±≈ü. ƒ∞lk yorumu sen yap! üëá</p>
                        </div>
                    <% } %>
                </div>

                <!-- Yorum Formu -->
                <div class="comment-form" style="background: #f9fafb; padding: 30px; border-radius: 12px; margin-top: 40px; border: 1px solid #e5e7eb;">
                    <h4 style="margin-top: 0; margin-bottom: 20px;">Yorum Bƒ±rak</h4>
                    <form action="/blog/<%= blog.slug %>/comment" method="POST">
                        <div style="margin-bottom: 15px;">
                            <input type="text" name="name" placeholder="Adƒ±nƒ±z" required style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 8px; font-size: 14px;">
                        </div>
                        <div style="margin-bottom: 15px;">
                            <textarea name="comment" rows="4" placeholder="Yorumunuzu buraya yazƒ±n..." required style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 8px; font-family: inherit; font-size: 14px;"></textarea>
                        </div>
                        <button type="submit" class="btn-submit" style="background: #1f2937; color: white; border: none; padding: 12px 30px; border-radius: 6px; cursor: pointer; font-weight: bold; font-size: 14px; transition: 0.3s;">Yorumu G√∂nder</button>
                    </form>
                </div>
            </div>

        </article>
    </div>
</main>

<!-- SCRIPT AYNI -->
<script>
    const slug = "<%= blog.slug %>";
    const localKey = "liked_" + slug;
    const likeBtn = document.getElementById("likeBtn");
    const likeText = document.getElementById("likeText");

    if (localStorage.getItem(localKey)) {
        likeBtn.classList.add("liked");
        likeBtn.disabled = true;
        likeText.innerText = "Beƒüendiniz";
    }

    function likePost(slug) {
        if (localStorage.getItem(localKey)) return;

        fetch('/api/blog/' + slug + '/like', { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById("likeCount").innerText = data.newLikes;
                    likeBtn.classList.add("liked");
                    likeBtn.disabled = true;
                    likeText.innerText = "Beƒüendiniz";
                    localStorage.setItem(localKey, "true");
                }
            })
            .catch(err => console.error("Hata:", err));
    }
    // --- HAVA DURUMU SCRIPT (EMOJƒ∞ DESTEKLƒ∞) ---
    const blogTitleForWeather = "<%= blog.title %>";
    
    // 1. ≈ûehir ismini temizle
    let city = blogTitleForWeather.split(' ')[0].replace(/['‚Äô:,].*/, '').trim(); 
    
    // 2. √áeviri S√∂zl√ºƒü√º
    const cityDictionary = {
        "Barselona": "Barcelona", "Atina": "Athens", "Venedik": "Venice", "Londra": "London",
        "M√ºnih": "Munich", "Kapadokya": "Cappadocia", "Moskova": "Moscow", "Floransa": "Florence",
        "Roma": "Rome", "Milano": "Milan", "Kahire": "Cairo", "√úsk√ºp": "Skopje",
        "Saraybosna": "Sarajevo", "Belgrad": "Belgrade", "B√ºkre≈ü": "Bucharest",
        "Viyana": "Vienna", "Kopenhag": "Copenhagen", "Meksiko": "Mexico City", "ƒ∞stanbul": "Istanbul"
    };

    if (cityDictionary[city]) {
        city = cityDictionary[city];
    }

    const weatherApiKey = "ddd502ba6fde213006a6f1f9d2938521"; // <-- Kendi Key'in buraya

    // 3. ƒ∞kon Kodlarƒ±nƒ± Emojiye √áeviren Fonksiyon
    function getWeatherEmoji(iconCode) {
        const icons = {
            "01d": "‚òÄÔ∏è", "01n": "üåô", // A√ßƒ±k
            "02d": "‚õÖ", "02n": "‚òÅÔ∏è", // Az Bulutlu
            "03d": "‚òÅÔ∏è", "03n": "‚òÅÔ∏è", // Par√ßalƒ± Bulutlu
            "04d": "‚òÅÔ∏è", "04n": "‚òÅÔ∏è", // √áok Bulutlu
            "09d": "üåßÔ∏è", "09n": "üåßÔ∏è", // Saƒüanak
            "10d": "üå¶Ô∏è", "10n": "üåßÔ∏è", // Yaƒümurlu
            "11d": "‚õàÔ∏è", "11n": "‚õàÔ∏è", // G√∂k G√ºr√ºlt√ºl√º
            "13d": "‚ùÑÔ∏è", "13n": "‚ùÑÔ∏è", // Karlƒ±
            "50d": "üå´Ô∏è", "50n": "üå´Ô∏è"  // Sisli
        };
        return icons[iconCode] || "üå§Ô∏è"; // Bulamazsa varsayƒ±lan
    }

    if (city && weatherApiKey) {
        fetch(`https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${weatherApiKey}&units=metric&lang=tr`)
        .then(response => response.json())
        .then(data => {
            if (data.cod === 200) {
                document.getElementById('weatherWidget').style.display = "flex";
                
                // Sƒ±caklƒ±k
                document.getElementById('w-temp').innerText = Math.round(data.main.temp);
                
                // A√ßƒ±klama (Ba≈ü harfi b√ºy√ºk)
                let desc = data.weather[0].description;
                document.getElementById('w-desc').innerText = desc.charAt(0).toUpperCase() + desc.slice(1);
                
                // ƒ∞KON YERƒ∞NE EMOJƒ∞ KOYUYORUZ
                const iconCode = data.weather[0].icon;
                document.getElementById('w-icon').innerText = getWeatherEmoji(iconCode);
                
            } else {
                console.log("Hava durumu bulunamadƒ±: " + city);
            }
        })
        .catch(err => console.log("Hava durumu hatasƒ±:", err));
    }
</script>

