<%- include('partials/header') %>

<div class="container" style="max-width: 900px; margin-top: 40px; margin-bottom: 60px;">
    
    <!-- Rehber Kartı -->
    <div class="guide-wrapper" style="background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 5px 20px rgba(0,0,0,0.05); border: 1px solid #e5e7eb;">
        
        <!-- Kapak Görseli -->
        <div class="guide-hero" style="position: relative; height: 350px;">
            <img src="<%= guide.image %>" alt="<%= guide.title %>" style="width: 100%; height: 100%; object-fit: cover;">
            <div style="position: absolute; bottom: 0; left: 0; right: 0; background: linear-gradient(to top, rgba(0,0,0,0.8), transparent); padding: 40px; color: white;">
                <span style="background: #f59e0b; color: #000; padding: 5px 15px; border-radius: 20px; font-weight: bold; font-size: 12px; text-transform: uppercase;">Gezgin Rehberi</span>
                <h1 style="margin: 10px 0 0 0; font-size: 32px;"><%= guide.title %></h1>
            </div>
        </div>

        <!-- İçerik -->
        <div class="guide-content" style="padding: 40px; font-size: 18px; line-height: 1.8; color: #374151;">
            <%- guide.content %>
        </div>

        <!-- Alt Bilgi -->
        <div class="guide-footer" style="padding: 20px 40px; background: #f9fafb; border-top: 1px solid #e5e7eb; text-align: center;">
            <p style="margin: 0; font-size: 14px; color: #6b7280;">Bu içerik RotaBlog editörleri tarafından özel olarak hazırlanmıştır.</p>
            <a href="/" style="display: inline-block; margin-top: 15px; color: #059669; font-weight: bold; text-decoration: none;">&larr; Ana Sayfaya Dön</a>
        </div>

    </div>

</div>

<%- include('partials/footer') %>